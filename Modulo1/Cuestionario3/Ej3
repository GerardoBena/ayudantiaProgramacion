bool esTriangular(unsigned long numero, unsigned long *lado){
    unsigned long aux=0;
    while(1){
        aux= (*lado) * (*lado + 1)/2;
        if(aux==numero) return true;
        if(aux>numero) return false;
        (*lado)++;
    }
}


