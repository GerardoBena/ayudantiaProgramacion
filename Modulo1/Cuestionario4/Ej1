#include <stdio.h>

unsigned long calcularCanicas(unsigned long altura){
    unsigned long canicas = 1,anterior = 1;
    for(unsigned long i=2;i<=altura;i++){
        canicas = canicas + (anterior + i);
        anterior+=i;
    }
    return canicas;
}


int main()
{
    unsigned int altura;
    unsigned long canicas=0;
    while(1){
        scanf("%d",&altura);
        
        if(altura==0){
            printf("--- FIN ---");
            break;
        }
        
        canicas=calcularCanicas(altura);
        
        printf("Para construir una pirÃ¡mide de altura %d necesitas %ld canica(s).\n",altura,canicas);
    }
    
    return 0;
}
